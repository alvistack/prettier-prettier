#!/usr/bin/make -f

SHELL := /bin/bash

override_dh_auto_install:
	install -Dpm 755 -d debian/tmp/usr/bin
	install -Dpm 755 -d debian/tmp/usr/lib/node_modules
	cp -rfT node_modules debian/tmp/usr/lib/node_modules
	pushd debian/tmp/usr/bin && \
		ln -fs /usr/lib/node_modules/prettier/bin-prettier.js prettier && \
		popd
	chmod a+x debian/tmp/usr/lib/node_modules/prettier/bin-prettier.js
	fdupes -qnrps debian/tmp/usr/lib/node_modules

override_dh_fixperms:
	dh_fixperms
	chmod a+x debian/prettier/usr/lib/node_modules/prettier/bin-prettier.js

override_dh_auto_test:

override_dh_auto_clean:

%:
	dh $@
